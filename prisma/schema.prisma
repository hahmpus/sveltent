generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// TEST DATA
model Ingredient {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  nutrients          Nutrients[]
  RecipieIngredients RecipieIngredients[]
}

model RecipieIngredients {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  recipie      Recipie    @relation(fields: [recipieId], references: [id])
  recipieId    String     @db.ObjectId
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String     @db.ObjectId
}

model Recipie {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ingredients RecipieIngredients[]
}

type Nutrients {
  name String
  unit String
  amount Float
}